<%= simple_form_for [mega_scaffold.scope&.to_sym, @parent, record].reject(&:blank?) do |f| %>
  <% mega_scaffold.form.each do |e| %>
    <% if e[:type] == :association %>
      <%= f.association e[:name], collection: e[:collection].call, as: e[:as] %>
    <% else %>
      <%= f.input e[:name], as: e[:type] %>
    <% end %>
  <% end %>
  <br>
  <%= f.submit %>
  -
  <%= link_to 'Back', { action: :index }, { class: 'button' } %>
<% end %>