<%= simple_form_for record do |f| %>

  <% mega_scaffold.form.each do |e| %>
    <% if e[:type] == :association %>
      <%= f.association e[:name], collection: e[:collection].call %>
    <% else %>
      <%= f.input e[:name], as: e[:type] %>
    <% end %>
  <% end %>

  <%= f.submit %>
  -
  <%= link_to 'Back', action: :index, class: 'button' %>

<% end %>